@using ShinyTeeth.Models;

@model Customer;

<partial name="PartialViews/_UserInfo" for="User"></partial>

<div class="card" style="min-width: 350px">
	<div class="card-body">
		<h4>Customer</h4>
		<hr />
		<p>
			<u>FullName: </u>
			<i>@Model.User.FullName</i>
		</p>
		<p>
			<u>Address: </u>
			<i>@(Model.Address ?? "Unset")</i>
		</p>
		<p>
			<u>Created: </u>
			<i>@Model.Created.ToLocalTime()</i>
		</p>
	</div>
</div>