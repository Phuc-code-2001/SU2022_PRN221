@using ShinyTeeth.Models;

@model AppUser;

<div class="card">
    <div class="text-center">
        <img class="card-img-top" src="@Model.ImageURL" style="max-width: 250px" />
    </div>
    <div class="card-body">
        <div class="mx-5">
            <div class="row">
                <div class="col-sm-6">
                    <strong class="mr-5"> User Name: </strong>
                </div>
                <div class="col-sm-6">
                    @Model.UserName
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <strong class="mr-5"> Phone: </strong>
                </div>
                <div class="col-sm-6">
                    @(Model.PhoneNumber ?? "Unset")
                </div>
            </div>
           <div class="row">
                <div class="col-sm-6">
                    <strong class="mr-5"> Email: </strong>
                </div>
                <div class="col-sm-6">
                    @Model.Email
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <strong class="mr-5"> BirthDay: </strong>
                </div>
                <div class="col-sm-6">
                   @(Model.BirthDay?.ToShortDateString() ?? "Unset")
                </div>
            </div>
            
        </div>
    </div>
    <div class="card-footer">
        <a class="btn btn-success text-white w-100 mb-2" asp-page="./Update" asp-route-Id="@Model.Id"><i class="fa-solid fa-pen"></i> Update </a>
        <form method="post" asp-page="/Common/UpdateAvatar" enctype="multipart/form-data" id="update_image_form">
            <input type="hidden" name="userId" value="@Model.Id" />
            <input type="file" name="file" id="update_image_file" style="display: none" />
            <label class="btn btn-danger text-white w-100" for="update_image_file" style="cursor: pointer"><i class="fa-solid fa-camera"></i> Change Avatar </label>
        </form>
    </div>
</div>

