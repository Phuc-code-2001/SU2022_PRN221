@page
@model ShinyTeeth.Pages.Devices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<h4>Device</h4>
<hr />

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Device.Id"/>
                    <div class="form-group">
                        <label asp-for="Device.DeviceCode" class="control-label"></label>
                        <input asp-for="Device.DeviceCode" class="form-control" />
                        <span asp-validation-for="Device.DeviceCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Device.Name" class="control-label"></label>
                        <input asp-for="Device.Name" class="form-control" />
                        <span asp-validation-for="Device.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Device.Description" class="control-label"></label>
                        <input asp-for="Device.Description" class="form-control" />
                        <span asp-validation-for="Device.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Device.Value" class="control-label"></label>
                        <input asp-for="Device.Value" class="form-control" />
                        <span asp-validation-for="Device.Value" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Device.RoomCode" class="control-label"></label>
                        <select asp-for="Device.RoomCode" class ="form-control" asp-items="ViewBag.RoomCode"></select>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Device.Status" class="control-label"></label>
                        <select asp-for="Device.Status" class="form-control">
                            <option value="true">Active</option>
                            <option value="false">Deactive</option>
                        </select>
                        <span asp-validation-for="Device.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Device.ImportDate" class="control-label"></label>
                        <input asp-for="Device.ImportDate" class="form-control" />
                        <span asp-validation-for="Device.ImportDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<a class="btn btn-success mt-2" asp-page="Index">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
