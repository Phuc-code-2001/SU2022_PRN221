@page
@model ShinyTeeth.Pages.Notifications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Notification.Id" />
            <div class="form-group">
                <label asp-for="Notification.ReceiverId" class="control-label"></label>
                <select asp-for="Notification.ReceiverId" class="form-control" asp-items="ViewBag.ReceiverId"></select>
                <span asp-validation-for="Notification.ReceiverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.Content" class="control-label"></label>
                <input asp-for="Notification.Content" class="form-control" />
                <span asp-validation-for="Notification.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.Created" class="control-label"></label>
                <input asp-for="Notification.Created" class="form-control" />
                <span asp-validation-for="Notification.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.LinkTo" class="control-label"></label>
                <input asp-for="Notification.LinkTo" class="form-control" />
                <span asp-validation-for="Notification.LinkTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification.Status" class="control-label"></label>
                <input asp-for="Notification.Status" class="form-control" />
                <span asp-validation-for="Notification.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
