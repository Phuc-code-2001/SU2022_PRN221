@page
@model ShinyTeeth.Pages.Customers.UpdateModel
@{
}

<partial name="PartialViews/_Messages" for="Messages"></partial>

@if(Model.Customer != null) 
{
	<form method="post">
		<div class="card">
			<div class="card-body">
				<p>
					<label asp-for="FullName"></label>
					<input class="form-control" asp-for="FullName" />
					<span asp-validation-for="FullName"></span>
				</p>
				<p>
					<label asp-for="Address"></label>
					<input class="form-control" asp-for="Address" />
					<span asp-validation-for="Address"></span>
				</p>
				<p>
					<label asp-for="PhoneNumber"></label>
					<input class="form-control" asp-for="PhoneNumber" />
					<span asp-validation-for="PhoneNumber"></span>
				</p>
				<p>
					<label asp-for="BirthDay"></label>
					<input class="form-control" asp-for="BirthDay" />
					<span asp-validation-for="BirthDay"></span>
				</p>
			</div>
			<div class="card-footer">
				<button class="btn btn-primary">Confirm</button>
			</div>
		</div>
	</form>
}